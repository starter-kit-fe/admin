{
  "$schema": "https://turborepo.com/schema.json",
  // "ui": "tui",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "docs": {
      "dependsOn": [
        "^docs"
      ],
      "outputs": [
        "apps/server/internal/docs/swagger.json"
      ],
      "inputs": [
        "apps/server/internal/**/*.go",
        "apps/server/cmd/**/*.go"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
